{% extends 'base.html.twig' %}

{% block container %}
    <h1 class="mt-3">Settings</h1>

    <div class="row">
        <div class="col-md-3">

            <div class="list-group">
                <a href="{{ path('board_settings_options', { 'boardId': board.id }) }}" class="list-group-item{% if app.request.attributes.get('_route') == 'board_settings_options' %} active{% endif %}">
                    Options
                </a>
                <a href="{{ path('board_settings_collaborator', { 'boardId': board.id }) }}" class="list-group-item{% if app.request.attributes.get('_route') == 'board_settings_collaborator' %} active{% endif %}">
                    Collaborateurs
                </a>
            </div>

        </div>
        <div class="col-md-9">

            <div class="card">
                <div class="card-header">
                    {% block settings_title %}{% endblock %}
                </div>
                <div class="card-block">
                    {% block settings_content %}{% endblock %}
                </div>
            </div>

        </div>
    </div>

{% endblock %}
