<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/style.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div id="app">

                <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                    <button class="navbar-toggler navbar-toggler-right hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a href="{{ path('home') }}" class="navbar-brand">
                        <img src="{{ asset('assets/images/elephant.svg') }}" width="40" height="30" alt="Elephant">
                        Elephant
                    </a>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <span href="#" class="nav-link">{{ app.user }}</span>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('logout') }}" class="nav-link">DÃ©connexion</a>
                        </li>
                    </ul>
                </nav>

                <div class="container-fluid">
                    {% block container %}{% endblock %}
                </div>

                <div class="alerts">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-dismissible fade alert-{{ label }} show" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>

            </div>

        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('assets/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
