<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/style.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div id="app">

                <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                    <button class="navbar-toggler navbar-toggler-right hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a href="{{ path('home') }}" class="navbar-brand">
                        <img src="{{ asset('assets/images/elephant.svg') }}" width="40" height="30" alt="Elephant">
                        Elephant
                    </a>
                </nav>

                <div class="container-fluid">
                    <div class="row">
                        <nav class="col-sm-4 col-md-3 hidden-xs-down bg-faded sidebar">

                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item text-sm-center pl-2 pr-2">
                                    {% block add_bookmarks_button %}
                                        <a href="" class="btn btn-success btn-block disabled">
                                            <i class="fa fa-star-o"></i>
                                            Ajouter un favoris
                                        </a>
                                    {% endblock %}
                                </li>
                            </ul>

                            {{ render(controller('app.ui.action.collection_nav_action')) }}

                            <ul class="nav nav-pills flex-column new-collection-menu col-sm-4 col-md-3 pl-0 pr-0">
                                <li class="nav-item">
                                    <a href="{{ path('collection_add') }}" class="btn btn-default btn-block">
                                        <i class="fa fa-folder-o"></i>
                                        Nouvelle collection ...
                                    </a>
                                </li>
                            </ul>

                        </nav>
                        <main class="col-sm-8 offset-sm-4 col-md-9 offset-md-3 pt-3">

                            {% block content %}{% endblock %}

                        </main>
                    </div>
                </div>

            </div>

        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('assets/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
