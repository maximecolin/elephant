{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post" class="form-login">
        <img src="{{ asset('assets/images/elephant-black.svg') }}" alt="Elephant" />

        <div class="form-group">
            <label for="username" class="sr-only">Adresse email :</label>
            <input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Adresse email" />
            <label for="password" class="sr-only">Mot de passe :</label>
            <input type="password" id="password" class="form-control" name="_password" placeholder="Mot de passe" />
        </div>

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">login</button>
        </div>
    </form>
{% endblock %}
